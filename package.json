{
  "name": "basecoatui",
  "version": "0.1.0",
  "description": "shadcn/ui for the rest of us",
  "author": "hunvreus",
  "type": "module",
  "files": [
    "src/css",
    "src/js",
    "src/nunjucks",
    "src/jinja",
    "cli"
  ],
  "bin": {
    "basecoat": "./cli/index.js"
  },
  "exports": {
    ".": "./css/basecoat.css"
  },
  "keywords": [
    "components",
    "component library",
    "component system",
    "ui",
    "ui kit",
    "shadcn",
    "shadcn/ui",
    "tailwind",
    "tailwindcss",
    "css",
    "html",
    "jinja",
    "nunjucks",
    "alpinejs"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hunvreus/basecoat.git"
  },
  "bugs": {
    "url": "https://github.com/hunvreus/basecoat/issues"
  },
  "homepage": "https://github.com/hunvreus/basecoat#readme",
  "scripts": {
    "css:dev": "tailwindcss -i ./docs/css/styles.css -o ./docs/src/assets/styles.css --watch",
    "eleventy:serve": "eleventy --serve",
    "dev": "concurrently \"npm:css:dev\" \"npm:eleventy:serve\"",
    "build": "tailwindcss -i ./docs/css/styles.css -o ./docs/src/assets/styles.css --minify && eleventy"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@grimlink/eleventy-plugin-lucide-icons": "^2.1.4",
    "@tailwindcss/cli": "^4.1.3",
    "commander": "^13.1.0",
    "concurrently": "^9.1.2",
    "fs-extra": "^11.3.0",
    "inquirer": "^12.6.0",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.3"
  }
}
